public class MovingObject: MonoBehaviour{

private Animator animator; //캐릭터의 Animator 컴포넌트를 통제하기 위해 선언
float x;
float y;    



    void Start(){
        animator=GetComponent<Animator>();// Animator를 통제할 수 있게 된다
    }

    //움직이는 코드안에 
    void Update(){
    animator.SetFloat("MovingX",x);
    animator.SetFloat("MoivigY",y);
    animator.SetBool("Walking",true);//상태 전이로 움직임
    animator.SetBool("Walking",false);//상태 전이로 정지
    }
}




