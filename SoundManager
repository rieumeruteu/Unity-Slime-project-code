//resources파일을 생성하고 음향 파일들을 넣어줘야 Load해 준다.
//다른 스크립트에  SoundManager.PlaySound(" ");를 넣어주면 작동한다.


public class SoundManager : MonoBehaviour
{

    public static AudioClip WalkingSound, Walking2Sound, HitSound, DeathSound, AttackSound;
    static AudioSource TheAudio;
    
    // Start is called before the first frame update
    void Start()
    {
        WalkingSound=Resources.Load<AudioClip> ("grass");
        Walking2Sound=Resources.Load<AudioClip> ("Walking2");
        HitSound=Resources.Load<AudioClip> ("Hit");
        DeathSound=Resources.Load<AudioClip> ("Death");
        AttackSound=Resources.Load<AudioClip> ("Attack");

        TheAudio=GetComponent<AudioSource>();
    }

    // Update is called once per frame
    void Update()
    {
        
    }

    public static void PlaySound(string clip)
    {
        switch(clip)
        {
            case "grass":
                TheAudio.PlayOneShot (WalkingSound);
                break;
            case "Walking2":
                TheAudio.PlayOneShot (Walking2Sound);
                break;
            case "Hit":
                TheAudio.PlayOneShot (HitSound);
                break;
            case "Death":
                TheAudio.PlayOneShot (DeathSound);
                break;
            case "Attack":
                TheAudio.PlayOneShot (AttackSound);
                break;
        }
    }
}