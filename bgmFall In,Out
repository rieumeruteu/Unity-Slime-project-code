//브금이 서서히 작아졌다가 다시 커지는 코드 (따로 나눠서 사용해도 됨)
public class TestFadInOut : MonoBehaviour
{
    bgmManager BGM;//bgmManager를 실행시켜 줄 변수명 BGM
   

    void Start()
    {
        BGM=FindObjectOfType<bgmManager>();//bgmManager를 BGM에 넣어준다
    }

    private void OnTriggerEnter2D(Collider2D collision)
    {
       StartCoroutine(abc());
    }
    IEnumerator abc()
    {
        BGM.FadeOutMusic();//소리 서서히 작아진다
        yield return new WaitForSeconds(3f);//3초 딜레이 후 
        BGM.FadeInMusic();//브금 다시 소리가 커짐
    }
}